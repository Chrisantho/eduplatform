# ============================================
# EduPlatform Environment Configuration
# ============================================

# Database Configuration
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://user:password@localhost:5432/eduplatform_db

# Email Service (for password reset notifications)
SENDGRID_API_KEY=your_sendgrid_api_key_here
ADMIN_EMAIL=admin@eduplatform.com

# Backend Configuration
# Java home path (set if mvn command is not in PATH)
JAVA_HOME=/usr/lib/jvm/java-21-openjdk

# Spring Boot Configuration
SPRING_JPA_HIBERNATE_DDL_AUTO=validate
SPRING_APPLICATION_NAME=eduplatform-backend
SERVER_PORT=8080
SERVER_SERVLET_CONTEXT_PATH=/api

# Frontend Configuration
# API endpoint for frontend to call backend
VITE_API_URL=http://localhost:8080/api

# Session & Authentication
SESSION_SECRET=your_secure_random_secret_key_here_min_32_chars
JWT_SECRET=your_jwt_secret_key_here_min_64_chars

# Environment Mode
NODE_ENV=development
ENVIRONMENT=local

# Docker Configuration (if using Docker Compose)
POSTGRESQL_USER=user
POSTGRESQL_PASSWORD=password
POSTGRESQL_DB=eduplatform_db

# Email Configuration
EMAIL_SERVICE_URL=http://127.0.0.1:3001/send-email
MAIL_HOST=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USER=apikey
MAIL_PASSWORD=${SENDGRID_API_KEY}

# Frontend Build
VITE_BUILD_SOURCEMAP=true

# Backend Logging
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_EDUPLATFORM=DEBUG

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Session Configuration
SESSION_STORE=jdbc
SESSION_TIMEOUT=3600000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Exam Configuration
AUTO_SUBMIT_ENABLED=true
ALLOW_MULTIPLE_ATTEMPTS=false

# Analytics & Monitoring
ENABLE_METRICS=true
ENABLE_HEALTH_CHECK=true
