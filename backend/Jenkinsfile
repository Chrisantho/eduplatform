pipeline {
    agent any

    environment {
        // Docker Hub credentials stored in Jenkins (username/password)
        DOCKER_HUB_CREDENTIALS = 'docker-hub-creds'
        DOCKER_IMAGE = 'chtwirls/edu-backend:latest'
    }

    stages {
        stage('Clean Workspace') {
            steps {
                cleanWs()  // Clear workspace before starting
            }
        }

        stage('Verify Docker') {
            steps {
                sh 'docker version'
            }
        }

        stage('Build Jar') {
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Login to Docker Hub') {
            steps {
                withCredentials([usernamePassword(credentialsId: "${DOCKER_HUB_CREDENTIALS}", usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    sh 'echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin'
                }
            }
        }

        stage('Build and Tag Docker Image') {
            steps {
                sh "docker build -t ${DOCKER_IMAGE} ."
                sh "docker images"  // Optional: verify the image was built correctly
            }
        }

        stage('Push Docker Image') {
            steps {
                sh "docker push ${DOCKER_IMAGE}"
            }
        }
    }

    post {
        always {
            echo "Pipeline finished!"
            // Optional: Clean up Docker images to save space
            sh "docker rmi ${DOCKER_IMAGE} || true"
        }
        success {
            echo "✅ Docker image pushed successfully to Docker Hub: ${DOCKER_IMAGE}"
        }
        failure {
            echo "❌ Pipeline failed. Check logs for errors."
        }
    }
}